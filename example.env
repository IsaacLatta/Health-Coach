# Health-Coach Environment Configuration
# Copy this file to .env and update with your actual values

# For local Qwen model via Ollama
#MODEL=ollama/qwen3:latest

# For OpenAI GPT-4 mini
#MODEL=gpt-4o-mini
OPENAI_API_KEY=your_openai_api_key_here # If useing open-ai, otherwise consult crewai docs (see README)

# Backend server API settings
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8080

# Frontend server settings
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=8501


# Absolute paths are encouraged
PRED_MODEL_PATH=/path/to/your/Health-Coach/models/predictor.pkl
DB_PATH=/path/to/your/Health-Coach/data/db/health_coach.db

# Database Configuration
DB_TIMEOUT=5
DB_JOURNAL_MODE=WAL
DB_SYNCHRONOUS=NORMAL

# Q-learning environment parameters, these are our defaults
Q_STATES=10 # Number of discrete states for risk discretization
Q_ACTIONS=6 # Number of available actions (threshold/top-k adjustments)